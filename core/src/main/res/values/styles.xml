    <style name="TvTextViewEpisodeDialogTitle" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/tv_label_episodes</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/iran_yekan_demi_bold</item>
    </style>

    <style name="TvTextViewEpisodeDialogMessage" parent="Widget.AppCompat.TextView">
